
" colourscheme
set background=dark
colorscheme solarized

syntax enable		" enable syntax highlighting
set number			" show line numbers
set cursorline      " highlight current line
set tabstop=4		" number of visual spaces per TAB
set softtabstop=4	" number of spaces in tab when editing
set expandtab		" tabs are spaces
set showmatch       " show matching [{()}]
set backspace=indent,eol,start    " let backspace go around edges
set nobackup        " don't create temporary backup files
set ruler           " show cursor position in command bar
set incsearch       " show search results whilst typing
set hlsearch        " highlight found searches
set ignorecase      " search case insensitive
set autoindent      " auto indent on carriage return


